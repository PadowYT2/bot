<html>

<%- include("../partials/nav.ejs") %>

    <body>
        <div id="guildList" style="text-align: center; margin-top: 100px; color: #fff;">
            <!--
                <div class="this-guild">
                    <img src="url" class="guild-icon" />

                    <div class="manage-guild">
                        <a id="this-href" href="/dashboard/guild/id">
                            <button class="gen-button" id="manage-button">Manage</button>
                        </a>
                    </div>
                </div>
                -->
        </div>
    </body>
    <script>
        window.onload = () => {
            fetch("/api/user/guilds").then((r) => r.json()).then((r) => {
                console.log(r)
                document.getElementById("guildList").innerHTML = r.filter((g) => g.managed).map((g) => `
                    <div class="this-guild">
                        <img src="${g.iconUrl || "/util/defaultavatar.png"}" title="${g.name}" class="guild-icon" />

                        <div class="manage-guild">
                            <a id="this-href" href="/dash/guild/${g.id}">
                                <button class="gen-button" id="manage-button">Manage</button>
                            </a>
                        </div>
                    </div>`).join("")
            }).catch((e) => {
                console.log(e);
                document.getElementById("guildList").innerText = "произошла ашибка";
            });
        };
    </script>

    <style>
        body {
            background-color: #0b0c10;
            padding-left: 15vw;
            padding-right: 15vw;
        }

        .guild-icon {
            border-radius: 32px;
            padding: 8px 8px;
            width: 128px;
            height: 128px;
        }

        .this-guild {
            display: inline-block;
            margin-left: 15px;
            margin-top: 10px;
            background: #1f2833;
            border-radius: 24px;
        }

        #manage-button {
            border: 0;
            border-radius: 8px;
            margin-bottom: 8px;
            background: #1f2833;
            color: #66fcf1;
            font-size: 18px;
            padding: 1px 10px;
        }

        #manage-button:hover {
            background: #45a29e;
            color: #ffffff;
        }
    </style>

</html>