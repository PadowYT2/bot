<html>

<%- include("partials/nav.ejs") %>

    <body>
        <div class="stats">
            <div class="stats container">
                <div class="title">Users</div>
                <span id="userCount">
                    <div class="loader"></div>
                </span>
            </div>
            <div class="stats container">
                <div class="title">Guilds</div>
                <span id="guildCount">
                    <div class="loader"></div>
                </span>
            </div>
        </div>
    </body>
    <script>
        window.onload = () => {
            fetch("/api/stats").then((res) => res.json()).then((res) => {
                document.getElementById("userCount").innerText = res["users"].toLocaleString();
                document.getElementById("guildCount").innerText = res["guilds"].toLocaleString();
            }).catch((e) => {
                console.log(e);
                document.getElementById("userCount").innerText = "null";
                document.getElementById("guildCount").innerText = "null";
            });
        };
    </script>

    <style>
        .stats {
            text-align: center;
            margin-top: 100px;
        }

        .stats.container {
            display: inline-block;
            text-align: center;
            font-size: 32px;

            margin-top: 10px;
            border-radius: 24px;
            max-width: 180px;

            background: #1f2833;
            color: #66fcf1;
        }

        body {
            background-color: #0b0c10;
        }

        .loader {
            margin-left: 30%;
            margin-bottom: 8px;
            border: 8px solid #c5c6c7;
            border-radius: 50%;
            border-top: 8px solid #45a29e;
            width: 64px;
            height: 64px;
            animation: spin 800ms linear infinite;
        }

        @keyframes spin {
            0% {
                transform: rotate(0deg);
            }

            100% {
                transform: rotate(360deg);
            }
        }
    </style>

</html>